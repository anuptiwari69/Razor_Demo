@page
@model LoginModel

<h1>Login</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form method="post">
    <div class="form-group">
        <label for="username">Username</label>
        <input id="username" class="form-control" type="text" asp-for="Username" />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input id="password" class="form-control" type="password" asp-for="Password" />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
<div>
    <a asp-page="Signup">Become A User</a>
</div>
